<%- include('../inc/top') %>

    <div class="container-fluid">
        <div class="row bg-secondary-subtle">
            <h1>Products</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"><a href="#">product</a></li>
                    <li class="breadcrumb-item active" aria-current="page">product</li>
                </ol>
            </nav>
        </div>

        <form method="get" action="">
            <div class="row g-3 p-3 ">
                <select class="form-select col" name="category" aria-label="Default select example">
                    <option selected>select category</option>
                    <% category.forEach( (obj, index)=> {%>
                        <option value="<%= obj._id %>">
                            <%= obj.name %>
                        </option>
                        <% }); %>
                </select>
                <div class="col">
                    <button type="submit" class="btn btn-secondary"> search</button>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-12">
                <table class="table table-bordered border-dark-subtle table-striped">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">name</th>
                            <th scope="col">category</th>
                            <th scope="col">price</th>
                            <th scope="col">status</th>
                            <th scope="col">quantity</th>
                            <th scope="col">manufacturer</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% product.forEach( (obj, index)=> {%>
                            <tr>
                                <th scope="row">
                                    <%= index +1 %>
                                </th>
                                <td>
                                    <a class="click-here" href="/sp/product/detail/<%= obj._id %>"> 
                                    <%= obj.name %>
                                    </a>
                                </td>
                                <td id="price">
                                    <%= obj.id_category.name %>
                                </td>
                                <td>
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                        }).format(obj.price) %>
                                </td>
                                <td>
                                    <%= obj.status %>
                                </td>
                                <td>
                                    <%= obj.quantity %>
                                </td>
                                <td>
                                    <%= obj.manufacturer %>
                                </td>
                                <td class="text-center d-flex justify-content-around">
                                    <a href="/sp/product/edit/<%= obj._id %>"
                                        class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                                        <i class="bi bi-pen"></i>
                                    </a>
                                    <a href="/sp/product/delete/<%= obj._id %>"
                                        class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                   
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">...</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>



    <%- include('../inc/bottom') %>