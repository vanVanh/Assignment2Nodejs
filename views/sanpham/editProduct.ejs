<%- include('../inc/top') %>

<div class="container-fluid">
    <div class="row bg-secondary-subtle">
        <h1>Edit product</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                <li class="breadcrumb-item"><a href="#">product</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editproduct</li>
            </ol>
        </nav>
    </div>

    <div class="container">
        <div class="row col-12 col-md-8 m-auto mt-5 mb-5 border border-dark-subtle p-5 rounded-5 shadow-lg ">
            <form method="post" action="">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input name="name" type="text" class="form-control border border-dark-subtle" id="" placeholder="iphone..." value="<%= obj.name %>">
                    </div>
                </div>
    
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <select name="category" class="form-select" aria-label="Default select example">
                            <option selected>select category</option>
                            <% list.forEach( (row) => { 
                                let selected = '';
                                if (String(row._id)==String(obj.id_category)) {
                                    selected= '  selected  '
                                }
                                %>
                                <option <%= selected %> value="<%= row._id %>">
                                    <%= row.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input name="price" type="number" min="0" class="form-control border border-dark-subtle" id="inputPassword3" placeholder="2000" value="<%= obj.price %>">
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-10">
                        <select name="status" class="form-select" aria-label="Default select example">
                            <option  selected>select option</option>
                            <% status.forEach( item => {
                                
                                let selected = '';
                                if(item.name ==obj.status){
                                    selected = 'selected'
                                }

                                %>
                                <option <%= selected %> value="<%= item.name %>">
                                    <%= item.name %>
                                </option>
                            <% }); %>    
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Quantity</label>
                    <div class="col-sm-10">
                        <input name="quantity" type="number" min="0" class="form-control border border-dark-subtle" id="inputPassword3" placeholder="" value="<%= obj.quantity %>">
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Manufacturer</label>
                    <div class="col-sm-10">
                        <input name="manufacturer" type="text" class="form-control border border-dark-subtle" id="inputPassword3" placeholder="" value="<%= obj.manufacturer %>">
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="file" id="formFileDisabled" >
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="description" placeholder="Leave a comment here" id="" style="height: 100px" ><%= obj.description %></textarea>
                    </div>
                </div>

                <div class="d-grid gap-2 col-6 mx-auto mt-4">
                    <button type="submit" class="btn btn-outline-success">Save</button>
                </div>
            </form>
        </div>
    </div>


</div>

<%- include('../inc/bottom') %>